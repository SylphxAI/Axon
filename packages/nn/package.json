{
  "name": "@sylphx/nn",
  "version": "0.1.0",
  "type": "module",
  "description": "Pure functional neural network layers (Linear, Conv2D, LSTM, GRU, BatchNorm, Dropout)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "bun test"
  },
  "dependencies": {
    "@sylphx/tensor": "workspace:*",
    "@sylphx/functional": "workspace:*"
  },
  "keywords": [
    "neural-network",
    "layers",
    "pure-functions"
  ],
  "author": "SylphxAI",
