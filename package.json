{
  "name": "@sylphx/axon",
  "version": "0.1.0",
  "private": true,
  "description": "Pure functional PyTorch-like neural network library for TypeScript/JavaScript",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "bun run --filter='./packages/*' dev",
    "build": "bun run --filter='./packages/*' build",
    "test": "bun test",
    "lint": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "typecheck": "bun run --filter='./packages/*' typecheck",
    "clean": "rm -rf packages/*/dist apps/*/dist node_modules/.cache",
    "verify-docs": "bun run scripts/verify-docs.ts",
    "version": "bunx changeset version",
    "release": "bunx changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "latest",
    "typescript": "^5.7.2",
    "vitepress": "^1.6.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "machine-learning",
    "neural-network",
    "deep-learning",
    "autograd",
    "pure-functional",
    "typescript",
    "pytorch-like"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/Axon.git"
  },
  "license": "MIT",
  "author": "SylphxAI"
}
